#include <stdio.h>
char *Mystrstr(const char *str1, const char *str2)
{
	const char *s1 = str1;
	const char *s2 = str2;
	const char *start = s1;
	assert(str1 != NULL && str2 != NULL);
	while (*start != '\0')
	{
		s1 = start;
		s2 = str2;
                //相应下标指针相同且不为'\0'
		while (*s1 == *s2 && *s2 != '\0' && *s2 != '\0')
		{
			s1++;
			s2++;
		}
		if (*s1 == '\0')
		{
			return NULL;
		}
		if (*s2 == '\0')
		{
			return start; 
		}
		start++;
	}
}
int main()
{
	char *str1 = "abcdef";
	char *str2 = "bcd";
	printf("%s\n", Mystrstr(str1, str2));
	system("pause");
	return 0;
}
