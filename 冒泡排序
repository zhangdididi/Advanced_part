#include <stdio.h>
void Bubble_sort(int *arr, int sz)
{
	int i = 0;
	int j = 0;
	int flg = 0;
	for (i = 0; i < sz - 1; i++)
	{
		flg = 0;
		for (j = 0; j < sz - 1 - i; j++)
		{
			if (*(arr + j) > *(arr + j + 1))
			{
				int tmp = arr[j];
				arr[j] = arr[j + 1];
				arr[j + 1] = tmp;
				flg = 1;
			}
		}
		if (flg == 0)//通过flg来判断
		{
			break;
		}
	}
}

int main()
{
	int arr[] = { 43, 1, 42, 678, 341, 15, 9, 4, 32, 7 };
	int sz = sizeof(arr) / sizeof(arr[0]);
	Bubble_sort(arr, sz);
	for (int i = 0; i < 10; i++)
	{
		printf("%d ", arr[i]);//打印函数
	}
	return 0;
}
