//对NULL指针的解引用操作
void test() 
{
	int *p = (int *)malloc(INT_MAX / 4);  
	*p = 20;//如果p的值是NULL，就会出现错误  
	free(p); 
} 

//对动态开辟空间的越界访问
void test() 
{
	int i = 0;  
	int *p = (int *)malloc(10 * sizeof(int));  //开辟空间为10个整形，即40个字节，地址是从0到9
	if (NULL == p)  
	{ 
		exit(EXIT_FAILURE); 
	}  
	for (i = 0; i <= 10; i++)  
	{
		*(p + i) = i;//当i是10的时候越界访问  
	}  
	free(p); 
}
